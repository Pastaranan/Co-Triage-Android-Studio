<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register"
    android:background="@drawable/bgregis">


    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/bregis"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/fcminimalregular"
                android:text="ลงทะเบียน"
                android:textColor="#27BAA1"
                android:textSize="45sp" />

            <EditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/bgtextregis"
                android:drawableLeft="@drawable/ic_name"
                android:drawablePadding="15dp"
                android:ems="10"
                android:fontFamily="@font/fcminimalregular"
                android:hint="ชื่อ"
                android:inputType="textPersonName"
                android:paddingLeft="10dp"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/surname"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/bgtextregis"
                android:drawableLeft="@drawable/ic_name"
                android:drawablePadding="15dp"
                android:ems="10"
                android:fontFamily="@font/fcminimalregular"
                android:hint="นามสกุล"
                android:inputType="textPersonName"
                android:paddingLeft="10dp"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/spinner"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:background="@drawable/spinnersex"
                    android:fontFamily="@font/fcminimalregular"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/brithday"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="15dp"
                    android:layout_weight="1"
                    android:background="@drawable/bgtextregis"
                    android:drawableLeft="@drawable/ic_date"
                    android:drawablePadding="15dp"
                    android:ems="10"
                    android:fontFamily="@font/fcminimalregular"
                    android:hint="วัน/เดือน/ปีเกิด"
                    android:inputType="textPersonName"
                    android:paddingLeft="20dp"
                    android:textSize="20sp"
                    android:textAlignment="center"
                    android:paddingVertical="10dp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:background="#D9D9D9" />

            <EditText
                android:id="@+id/phonenum"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/bgtextregis"
                android:drawableLeft="@drawable/ic_phone"
                android:drawablePadding="15dp"
                android:ems="10"
                android:fontFamily="@font/fcminimalregular"
                android:hint="เบอร์โทรศัพท์"
                android:inputType="phone"
                android:paddingLeft="10dp"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/bgtextregis"
                android:drawableLeft="@drawable/ic_lock"
                android:drawablePadding="15dp"
                android:ems="10"
                android:fontFamily="@font/fcminimalregular"
                android:hint="รหัสผ่าน"
                android:inputType="textPassword"
                android:paddingLeft="10dp"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/repassword"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/bgtextregis"
                android:drawableLeft="@drawable/ic_lock"
                android:drawablePadding="15dp"
                android:ems="10"
                android:fontFamily="@font/fcminimalregular"
                android:hint="ยืนยันรหัสผ่าน"
                android:paddingLeft="10dp"
                android:textSize="20sp"
                android:inputType="textPassword"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:background="#D9D9D9" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/fcminimalregular"
                    android:text="Home Isolation"
                    android:textColor="#3B3838"
                    android:textSize="20sp" />

                <RadioGroup
                    android:id="@+id/homisolation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginRight="20dp"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/yes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/fcminimalregular"
                        android:text="ใช่"
                        android:textColor="#3B3838"
                        android:textSize="20sp"
                        android:clickable="true"/>

                    <RadioButton
                        android:id="@+id/no"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:fontFamily="@font/fcminimalregular"
                        android:text="ไม่ใช่"
                        android:textColor="#3B3838"
                        android:textSize="20sp" />
                </RadioGroup>
            </LinearLayout>

            <EditText
                android:id="@+id/namehospital"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/bgtextregis"
                android:drawableLeft="@drawable/ic_hospital"
                android:drawablePadding="15dp"
                android:ems="10"
                android:fontFamily="@font/fcminimalregular"
                android:hint="ชื่อโรงพยาบาลสนาม"
                android:inputType="textPersonName"
                android:paddingLeft="10dp"
                android:textSize="20sp"
                android:visibility="invisible"/>

            <EditText
                android:id="@+id/hospitalnum"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/bgtextregis"
                android:drawableLeft="@drawable/ic_hn"
                android:drawablePadding="15dp"
                android:ems="10"
                android:fontFamily="@font/fcminimalregular"
                android:hint="เลข Hospital Number (HN)"
                android:inputType="number"
                android:paddingLeft="10dp"
                android:textSize="20sp"
                android:visibility="invisible"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="bottom"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="100dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <Button
                    android:id="@+id/back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/button1"
                    android:backgroundTint="#7F7F7F"
                    android:elevation="10dp"
                    android:fontFamily="@font/fcminimalregular"
                    android:text="ย้อนกลับ"
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:translationZ="3dp"
                    />

                <Button
                    android:id="@+id/confirm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/button1"
                    android:backgroundTint="#27BAA1"
                    android:elevation="10dp"
                    android:fontFamily="@font/fcminimalregular"
                    android:text="ยืนยัน"
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:translationZ="3dp" />
            </LinearLayout>


        </LinearLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>