<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login1"
    android:background="#F0F0F0">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/relativeLayout"
                android:layout_width="match_parent"
                android:layout_height="520dp"
                android:background="@drawable/bglogin">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="50dp"
                    app:srcCompat="@drawable/logo" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="360dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="-270dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/bgtextlogin">

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="50dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/fcminimalregular"
                    android:text="เข้าสู่ระบบ"
                    android:textColor="#007FB2"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/textView19"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView13"
                    android:layout_alignStart="@+id/textView13"
                    android:layout_alignLeft="@+id/textView13"
                    android:layout_marginStart="0dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="0dp"
                    android:fontFamily="@font/fcminimalregular"
                    android:text="กรุณาเข้าสู่ระบบ ก่อนเข้าใช้งาน"
                    android:textColor="#767171"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/Username"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_below="@+id/textView19"
                    android:layout_alignStart="@+id/textView19"
                    android:layout_alignLeft="@+id/textView19"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginStart="0dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="50dp"
                    android:layout_marginRight="85dp"
                    android:background="@drawable/bguser"
                    android:ems="10"
                    android:fontFamily="@font/fcminimalregular"
                    android:hint="   หมายเลขโทรศัพท์"
                    android:inputType="number"
                    android:paddingLeft="10dp"
                    android:textColor="#000000"
                    android:textColorHint="#767171"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/Password"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_below="@+id/Username"
                    android:layout_alignStart="@+id/Username"
                    android:layout_alignLeft="@+id/Username"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginStart="0dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="50dp"
                    android:layout_marginRight="85dp"
                    android:background="@drawable/bguser"
                    android:ems="10"
                    android:fontFamily="@font/fcminimalregular"
                    android:hint="   รหัสผ่าน"
                    android:inputType="textPassword"
                    android:paddingLeft="10dp"
                    android:textColor="#000000"
                    android:textColorHint="#767171"
                    android:textSize="20sp" />

                <CheckBox
                    android:id="@+id/remember"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/Password"
                    android:layout_alignEnd="@+id/Password"
                    android:layout_alignRight="@+id/Password"
                    android:layout_marginStart="0dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="0dp"
                    android:layout_marginRight="0dp"
                    android:fontFamily="@font/fcminimalregular"
                    android:text="เข้าระบบอัตโนมัติ"
                    android:textColor="#767171"
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/login"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/remember"
                    android:layout_alignStart="@+id/Password"
                    android:layout_alignLeft="@+id/Password"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginStart="0dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="50dp"
                    android:layout_marginRight="50dp"
                    android:background="@drawable/buttonlogin"
                    android:fontFamily="@font/fcminimalregular"
                    android:text="เข้าสู่ระบบ"
                    android:textColor="#FFFFFF"
                    android:textSize="30sp"
                    app:backgroundTint="#00BFA5" />

                <Button
                    android:id="@+id/regis"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/login"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="0dp"
                    android:fontFamily="@font/fcminimalregular"
                    android:text="ลงทะเบียน"
                    android:textColor="#007FB2"
                    android:textSize="30sp" />

            </RelativeLayout>

            <Button
                android:id="@+id/sugg"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="200dp"
                android:layout_height="48dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="30dp"
                android:drawableLeft="@drawable/ic_baseline"
                android:fontFamily="@font/fcminimalregular"
                android:text="เกี่ยวกับ CO-Triage"
                android:textColor="#767171"
                android:textSize="20sp"
                app:backgroundTint="#F0F0F0" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>