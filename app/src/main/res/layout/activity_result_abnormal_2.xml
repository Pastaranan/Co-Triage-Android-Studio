<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".result_Abnormal_2"
    android:background="@drawable/bgabnormal">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/fcminimalregular"
            android:text="การทดสอบสมรรถภาพปอด"
            android:textColor="#FFFFFF"
            android:textSize="35sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="346dp"
            android:layout_height="431dp"
            android:layout_below="@+id/textView9"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:background="@drawable/anormal" />

        <Button
            android:id="@+id/viewmore"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/imageView4"
            android:layout_alignRight="@+id/imageView4"
            android:layout_alignBottom="@+id/imageView4"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="-18dp"
            android:background="@drawable/button1"
            android:fontFamily="@font/fcminimalregular"
            android:text="ดูเพิ่มเติม"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            app:backgroundTint="#3FBFC9"
            android:visibility="invisible"/>

        <Button
            android:id="@+id/call"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/save"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="32dp"
            android:layout_marginEnd="30dp"
            android:layout_marginRight="29dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/button1"
            android:fontFamily="@font/fcminimalregular"
            android:text="ติดต่อช่วยเหลือ"
            android:textSize="30sp"
            android:backgroundTint="#24ADA4"
            android:textColor="@color/white"
            android:elevation="3dp" />

        <Button
            android:id="@+id/save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/button2"
            android:fontFamily="@font/fcminimalregular"
            android:text="กลับหน้าหลัก"
            android:textColor="#000000"
            android:textSize="30sp"
            app:backgroundTint="#F2F2F2" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>